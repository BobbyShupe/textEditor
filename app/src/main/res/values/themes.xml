<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.TextViewer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Black background for the whole app -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>

        <!-- Text colors - light so they're visible on black -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#CCCCCC</item>

        <!-- Optional: make status bar dark with light icons -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorAccent">#00FF00</item>  <!-- Green cursor, or any bright color -->
    </style>
</resources>